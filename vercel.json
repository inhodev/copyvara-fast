{
    "version": 2,
    "builds": [
        {
            "src": "api/*.ts",
            "use": "@vercel/node"
        },
        {
            "src": "frontend-minimal/package.json",
            "use": "@vercel/static-build"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend-minimal/$1"
        }
    ]
}